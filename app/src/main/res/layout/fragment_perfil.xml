<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_primary_dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corners_perfil"
        >





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/l_secondary"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/l_secondary"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:id="@+id/iv_img_perfil_usuario"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_perfil"
                    android:alpha="0.4"
                    />

                <ImageView

                    android:padding="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_camara"
                    android:tint="@color/l_primary_dark"
                    />

                <TextView
                    android:id="@+id/tv_editar_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Editar Foto"
                    android:textStyle="bold"
                    android:textColor="@color/l_primary_dark"
                    android:textSize="30sp"
                    android:layout_toRightOf="@+id/iv_img_perfil_usuario"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/l_secondary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido Paterno"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_apellido_paterno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido Materno"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_apellido_materno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CURP"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_curp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_correo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de licencia"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_no_licencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>

                </LinearLayout>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="@color/l_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_password_actual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña actual"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:drawableEnd="@drawable/ic_ojo_cerrado"
                        android:drawableTint="@color/l_primary"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_password_nueva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña Nueva"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:drawableEnd="@drawable/ic_ojo_cerrado"
                        android:drawableTint="@color/l_primary"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/login_input">

                    <EditText
                        android:id="@+id/et_password_confirmar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmar contraseña"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:drawableEnd="@drawable/ic_ojo_cerrado"
                        android:drawableTint="@color/l_primary"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textColor="@color/l_primary_dark"
                        android:textColorHint="@color/l_primary"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_editar_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:backgroundTint="@color/l_primary"
                    android:text="Confirmar cambios"/>

            </LinearLayout>






        </LinearLayout>

    </ScrollView>

    </LinearLayout>



</RelativeLayout>